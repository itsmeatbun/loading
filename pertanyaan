    /********** KONFIG **********/
    const SOCKET_URL = "http://localhost:62025";

    /* Perintah yang memicu kartu */
    const COMMANDS = ["!pertanyaan", "!q", "!question"];

    /* Bank pertanyaan: bebas edit */
    const QUESTIONS = [
